#include <stdio.h>

void main(){
    int A, *B, **C, ***D;
    B = &A;   
    C = &B; 
    D = &C; 
    printf("Insira um valor: ");
    scanf("%d", &A); 
    printf("O dobro de A e: %d\n", *B * 2); //B PARA DOBRAR
    printf("O Triplo de A e: %d\n", **C * 3); //C PARA TRIPLICAR
    printf("O Quadruplo de A e: %d\n", ***D * 4); //D PARA QUADRIPLICAR
}
